<Page
    x:Class="Social_Movie_Manager.Pages.MovieInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:drawerLayout="using:DrawerLayout"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Social_Movie_Manager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="RootLayout">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="MainFragment" Grid.Row="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="220"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Image x:Name="Movie_Poster" Grid.Row="0" Source="/Assets/drawer_icon.png" Height="200" Width="135" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            <TextBlock x:Name="Movie_Rating" Grid.Row="1" Text="Rating: " Foreground="Black" FontSize="20" Height="25" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50,0,0,0"/>
            <TextBlock x:ConnectionId='1' x:Name="Movie_Reviews" Grid.Row="1" Height="25" Width="100" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,50,0"                              >
                <Underline>
                    <Run Text="Reviews" Foreground="Black" FontSize="20"/>
                </Underline>
            </TextBlock>
            <Image x:ConnectionId='2' x:Name="Facebook_Button" Grid.Row="2" Source="/Assets/facebook.png" Height="50" Width="50" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50,0,0,0"                                />
            <Image x:ConnectionId='3' x:Name="Twitter_Button" Grid.Row="2" Source="/Assets/twitter.jpg" Height="50" Width="50" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,0,0,0"                               />
            
        </Grid>
    </Grid>
</Page>

